@page "/"
@*Lavet af Jozsef*@

<PageTitle>ElevPortalen Home</PageTitle>

<link rel="stylesheet" href="css/index.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bevan&display=swap" rel="stylesheet">

@*Container*@
<div class="container">
    @*Row*@
    <div class="row align-items-center align-content-lg-center">
        @*Top container where the logo text is on top*@
        <div class="col-sm-12 col-md-12 col-lg-12 topContainer text-center">
            <h3 class="logoText">ElevPortalen</h3>
        </div>
        @*Left container for Students*@
        <div class="col-sm-12 col-md-6 col-lg-6 left-side text-center">
            <h3>Elev</h3>
            <img src="images/ElevPic-Left.png" alt="Logo" class="picture" />
            <div class="button-container">
                <NavLink href="Identity/Account/Register" class="btn btn-outline-dark">Register</NavLink>
                <NavLink href="Identity/Account/Login" class="btn btn-outline-dark">Login</NavLink>
            </div>
        </div>
        @*Right container for Companies*@
        <div class="col-sm-12 col-md-6 col-lg-6 right-side text-center">
            <h3>Firma</h3>
            <img src="images/ElevPic-Right.png" alt="Logo" class="picture" />
            <div class="button-container">
                <NavLink href="Identity/Account/Register" class="btn btn-outline-dark">Register</NavLink>
                <NavLink href="Identity/Account/Login" class="btn btn-outline-dark">Login</NavLink>
            </div>
        </div>
    </div>
</div>

   