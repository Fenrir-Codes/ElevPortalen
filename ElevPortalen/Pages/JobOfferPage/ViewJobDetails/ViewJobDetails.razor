@page "/viewjobdetails/{CompanyId:int}"

@using ElevPortalen.Models
@using ElevPortalen.Pages.AlertBox
@using ElevPortalen.Services;

@inject JobService _jobService
@inject IJSRuntime jsRuntime
@inject NavigationManager _navManager


<div class="container">

    @if (_job != null)
    {

        <div class="row">
            <div class="card text-white bg-dark bg-gradient mb-3">
                <div class="card-header">@_job.Title Specialiseret i @_job.Speciality.</div>
                <div class="card-body">
                    <h5 class="card-title">Arbejdsgiver : @_job.CompanyName</h5>
                    <p class="card-text">@_job.JobDetails</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center shadow-sm">
                        <h5 class="my-3">@_job.CompanyName</h5>
                        <p class="text-muted mb-4">@_job.JobAddress</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body shadow-sm">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Title</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@_job.Title</p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Details</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@_job.JobDetails</p>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Deadline</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@_job.Deadline.ToShortDateString()</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>Loading...</p>
    }

</div>
  


@code {
    [Parameter] public int CompanyId { get; set; }

    private JobOfferModel? _job = new JobOfferModel();

    protected override async Task OnInitializedAsync()
    {
        _job = await _jobService.GetOfferWithCompanyId(CompanyId);
    }


}
